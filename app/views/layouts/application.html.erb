<!DOCTYPE html>
<html>
<head>
  <title>Proyecto1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <style>
    .navbar-inverse {
      background-color: #8bcc00;
    }
    .navbar-inverse .navbar-brand {
      color: #222;
      font-weight: bold
    }
    .navbar-inverse .navbar-nav > li > a {
      color: #222;
    }
  </style>
</head>
<body style='background-color: #222'>
	<nav class="navbar navbar-inverse" style="margin-bottom: 0px; border-color: #669900">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Cheddar Chess</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown">Page 1<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Page 1-1</a></li>
              <li><a href="#">Page 1-2</a></li>
              <li><a href="#">Page 1-3</a></li>
            </ul>
          </li>
          <li><a href="{{pathFor 'juego'}}"><i>JUEGA</i></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          	<li><a><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Usuario: <%= current_user.username %></strong></a></li>
			  <li><%= link_to('Edit profile', edit_user_registration_path) %></li>
			  <li><%= link_to "Cerrar sesion", destroy_user_session_path, :method => :delete %></li>
		  <% else %>
			  <li><%= link_to('Registrarse', new_user_registration_path) %></li>
			  <li><%= link_to('Iniciar sesion', new_user_session_path) %></li>
		  <% end %>
        </ul>
      </div>
    </div>
  </nav>

<%= yield %>

</body>
</html>
