<div class='contenedor'>
  <div class='tittle'><h2>Inicie sesion</h2></div>

  <div class='FormStyle'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>  
      <ol class="form">
        <ul><%= f.label :login %> <br/> <%= f.text_field :login %></ul><br>
        <ul><%= f.label :password %> <br> <%= f.password_field :password, autocomplete: "off" %></ul><br>
          <% if devise_mapping.rememberable? -%>
            <ul><%= f.check_box :remember_me %> <br> <%= f.label :remember_me %></ul>
          <% end -%>
        <ul><%= f.submit "Iniciar sesion" %></ul>
      </ol>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
